<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luismunyoz.flightsearch.ui.screens.init.InitActivity"
    android:background="@color/pale_grey">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/clouds"/>

        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/flight_search"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/countries_cities_or_airports"
                android:layout_marginStart="@dimen/normal_margin"
                android:textColor="@color/black_33"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:layout_gravity="center">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/normal_margin">
                    <TextView
                        android:id="@+id/init_from_box"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/origin"
                        android:gravity="center"
                        android:focusable="true"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:textSize="16sp"
                        android:textColor="@color/almost_black"
                        app:layout_constraintTop_toTopOf="@id/init_switch"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/init_switch"
                        app:layout_constraintBottom_toBottomOf="@id/init_switch"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintHorizontal_chainStyle="spread"/>
                    <ImageButton
                        android:id="@+id/init_switch"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:layout_constraintStart_toEndOf="@id/init_from_box"
                        app:layout_constraintEnd_toStartOf="@id/init_to_box"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:srcCompat="@drawable/ic_compare_arrows"
                        android:tint="@color/white"
                        android:theme="@style/BlueButton"
                        android:layout_marginStart="@dimen/half_margin"
                        android:layout_marginEnd="@dimen/half_margin"/>
                    <TextView
                        android:id="@+id/init_to_box"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/destination"
                        android:gravity="center"
                        android:focusable="true"
                        android:clickable="true"
                        android:textSize="16sp"
                        android:textColor="@color/almost_black"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:layout_constraintTop_toTopOf="@id/init_switch"
                        app:layout_constraintBottom_toBottomOf="@id/init_switch"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/init_switch"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flight_dates"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginTop="@dimen/triple_margin"
                android:textColor="@color/black_33"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:layout_gravity="center">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/double_margin">
                    <TextView
                        android:id="@+id/init_date_departure_box"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/departure_date"
                        android:gravity="center"
                        android:focusable="true"
                        android:clickable="true"
                        android:textSize="16sp"
                        android:textColor="@color/almost_black"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/init_separator"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintHorizontal_chainStyle="spread"/>
                    <View
                        android:id="@+id/init_separator"
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        app:layout_constraintStart_toEndOf="@id/init_date_departure_box"
                        app:layout_constraintEnd_toStartOf="@id/init_date_return_box"
                        app:layout_constraintTop_toTopOf="@id/init_date_departure_box"
                        app:layout_constraintBottom_toBottomOf="@id/init_date_departure_box"
                        android:layout_margin="@dimen/double_margin"
                        android:background="@color/black_12"/>
                    <TextView
                        android:id="@+id/init_date_return_box"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/arrival_date"
                        android:gravity="center"
                        android:focusable="true"
                        android:clickable="true"
                        android:textSize="16sp"
                        android:textColor="@color/almost_black"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="1"
                        app:layout_constraintStart_toEndOf="@id/init_separator"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/init_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/super_margin"
                android:layout_marginStart="@dimen/half_margin"
                android:layout_marginEnd="@dimen/half_margin"
                android:text="@string/search_flights"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:theme="@style/BlueButton"
                android:enabled="false"
                android:padding="@dimen/double_margin"/>
        </LinearLayout>



    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>
